<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š MFQ Scoring Guide"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"/>

        <!-- Score Range 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0â€“5 points"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MILD"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_label_mild"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Score Range 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6â€“11 points"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODERATE"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_label_moderate"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Score Range 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="12+ points"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_label_high"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Footer Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This questionnaire helps track your daily mood patterns. Complete it honestly for the most accurate assessment of your emotional well-being."
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/dimgray"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
