<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/gradient_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assessment Complete"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/txtSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Daily Mood Result"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/txtTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score: "
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/imgMoodFace"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mild"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMoodLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MILD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtMoodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mood description here"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnReturnDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:fontFamily="@font/poppins_semibold"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/blue"
        android:layout_marginTop="32dp"/>
</LinearLayout>
