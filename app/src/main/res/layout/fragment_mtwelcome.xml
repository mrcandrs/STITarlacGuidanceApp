<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the STI Guidance Office\nMood Tracker!"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24sp"
        android:textColor="@color/lightblue"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track your daily mood using the MFQ (Mood and Feelings Questionnaire)."
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/lightblue"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student No.:"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:textColor="@color/lightblue"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/txtStudentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:textColor="@color/lightblue"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtLastTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last taken: Not yet taken"
        android:fontFamily="@font/poppins_italic"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/button_border_2"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/blue" />
</LinearLayout>
